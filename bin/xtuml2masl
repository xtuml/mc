#!/bin/bash

DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
export MASL_BIN_DIR=$DIR/

# This is the java plugin way to integrate.  Conveniently, it includes the correct formatting.
#java -cp $DIR/../../../plugins/org.xtuml.bp.x2m*/x2m.jar org.xtuml.bp.x2m.Xtuml2Masl $@
#exit 0

# This work was done and is left here for convenience.  Sometimes a BridgePoint
# developer may wish to have access "in between" the flow of executables.
# maslout:  "i:d:p:ks"
# masl:  "cvVsi:o:d:p:a:"
# i, d, p and s mean the same thing for both applications.
args=`getopt i:d:p:o:x:kcsvV $*`
if [ $? != 0 ]; then
  echo 'Usage:  xtuml2masl [-v | -V] [-xf] [-xl] -i <eclipse project> -d <domain component> [-o <output directory>] [-a <architecture>'
  echo '        xtuml2masl [-v | -V] [-xf] [-xl] -i <eclipse project> -p <project package> [-o <output directory>] [-a <architecture>'
fi
set -- $args
for i
do
  case "$i"
  in
  -c)
    coverage="-c"; shift;;
  -k)
    key_lett="-k"; shift;;
  -P)
    prebuild="-P"; shift;;
  -i)
    project_directory="-i $2"; shift; shift;;
  -d)
    model="$2"; domain="$2"; ddomain="-d $2"; shift; shift;;
  -p)
    model="$2"; project_package="$2"; pproject_package="-p $2"; shift; shift;;
  -v)
    validate="-v"; shift;;
  -v)
    validate_only="-V"; shift;;
  -o)
    output_directory="$2"; ooutput_directory="-o $2"; shift; shift;;
  -x)
    if [ "l" == "$2" ]; then
      skip_activities="-s"; shift; shift;
    elif [ "f" == "$2" ]; then
      skip_format="-xf"; shift; shift;
    fi;;
  -a)
    architecture="-a $2"; shift; shift;;
  --)
    shift; break;;
  esac
done
echo " $DIR/../../../plugins/org.xtuml.bp.pkg*/globals/Globals.xtuml | $DIR/x2m $key_lett $skip_activities $project_directory $ddomain $pproject_package $@ | $DIR/masl $coverage $validate $validate_only $skip_activities $project_directory $ddomain $project $ooutput_directory $architecture $@"
cat $DIR/../../../plugins/org.xtuml.bp.pkg*/globals/Globals.xtuml | $DIR/x2m $key_lett $skip_activities $project_directory $ddomain $pproject_package $@ | $DIR/masl $coverage $validate $validate_only $skip_activities $project_directory $ddomain $project $ooutput_directory $architecture $@
if [ "" == "$skip_format" ]; then
  echo "java -cp $DIR/antlr-3.5.2-complete.jar:$DIR/MASLParser.jar MaslFormatter -r -i $output_directory/$model -o $output_directory/$model.tmp"
  java -cp $DIR/antlr-3.5.2-complete.jar:$DIR/MASLParser.jar MaslFormatter -r -i $output_directory/$model -o $output_directory/$model.tmp
  if [ -d $output_directory/$model.tmp ]; then
    rm -rf $output_directory/$model
    mv $output_directory/$model.tmp $output_directory/$model
  fi
fi
